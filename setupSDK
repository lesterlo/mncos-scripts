
# Determine the root directory Path
if [ -n "$BASH_SOURCE" ]; then
	export ROOT=$(readlink -f $(dirname "$BASH_SOURCE"))
elif [ -n "$ZSH_NAME" ]; then
	export ROOT=$(readlink -f $(dirname "$0"))
else
	export ROOT=$(readlink -f ${PWD})
fi

# Load the xilinx get-machine-conf 
export PATH=$PATH:$ROOT/scripts
if [ -d $ROOT/source-layers/meta-xilinx/meta-xilinx-core/gen-machine-conf ]; then
        export PATH=$PATH:$ROOT/source-layers/meta-xilinx/meta-xilinx-core/gen-machine-conf
fi


source $ROOT/source-layers/poky/oe-init-build-env "$@"